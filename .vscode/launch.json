{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Cylon",
            "type": "node",
            "request": "launch",
            "runtimeVersion": "default",
            // "program": "${workspaceFolder}/experiments/cy-example/Main.cy",
            "program": "${workspaceFolder}/dist/Main.js",
            "outFiles": ["${workspaceFolder}/dist/Main.js"],
            "stopOnEntry": true,
            "smartStep": false
        },
        {
            "name": "Launch Build",
            "type": "node",
            "request": "launch",
            "runtimeVersion": "default",
            "program": "${workspaceFolder}/scripts/build/index.ts",
            "outFiles": ["${workspaceFolder}/bin/**/*.js"]
        },
        {
            "name": "Launch Exec",
            "type": "node",
            "request": "launch",
            "runtimeVersion": "default",
            "program": "${workspaceFolder}/exec.ts",
            "outFiles": ["${workspaceFolder}/bin/**/*.js"]
        },
        {
            "name": "Launch JavaScript",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/experiments/example.js"
        }
    ]
}
